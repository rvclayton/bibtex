  location     = "https://doi.org/10.1145/143371.143506"
}

@Article{hsssflan,
  author       = "Thomas~E. Anderson and Susan~S. Owicki and James~B. Saxe and Charles~P. Thacker",
  title        = "High-Speed Switch Scheduling for Local-Area Networks",
