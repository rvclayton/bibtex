@Article{hstoiadriotrmh,
  author       = "Philip Machanick and Pierre Salverda and Lance Pompe",
  title        = "Hardware-Software Trade-Offs in a Direct {Rambus} Implementation of the {RAMpage} Memory Hierarchy",
  journal      = asplos98,
