@Article{baadsfwmvts,
  author       = "Norman Meyrowitz and Margaret Moser",
  title        = "{BRUWIN}:  An Adaptable Design Strategy for Window Manager\slash Virtual Terminal Systems",
  journal      = sosp81,
  year         = 1981,
